<h2><%= t(:sign_in, scope: 'devise.shared.links') %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form__devise' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                wrapper: :custom_input %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                wrapper: :custom_input %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:sign_in, scope: 'devise.sessions.new'), class: 'btn btn--primary' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
